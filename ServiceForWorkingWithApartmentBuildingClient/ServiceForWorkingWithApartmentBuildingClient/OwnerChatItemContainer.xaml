<UserControl x:Class="ServiceForWorkingWithApartmentBuildingClient.OwnerChatItemContainer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ServiceForWorkingWithApartmentBuildingClient"
             mc:Ignorable="d" 
              d:DesignHeight="100" d:DesignWidth="600" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
    <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
        <Border BorderThickness="1" BorderBrush="Gray">
            <Grid Margin="200, 10, 10, 10" Background="Gainsboro">
                <Grid.RowDefinitions>
                    <RowDefinition Height="1*" />
                    <RowDefinition Height="15"/>
                </Grid.RowDefinitions>
                <TextBox Name="tbxMsgContent" Background="Gainsboro" BorderThickness="0"  TextWrapping="Wrap" Padding="5,5,0,0" Margin="5,0,5,0" Grid.Row="0" IsReadOnly="True"/>
                <Label Name="lblReceiveDate" Padding="0" VerticalContentAlignment="Center" Grid.Row="2" FontSize="6" HorizontalAlignment="Right" Margin="0,1,10,3"/>
            </Grid>
        </Border>
    </Grid>
</UserControl>
